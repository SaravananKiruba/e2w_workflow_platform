# Environment Variables
# Copy this file to .env.local and fill in your values

# Database
# For development with SQLite (simple setup):
# DATABASE_URL="file:./dev.db"

# For production with PostgreSQL:
DATABASE_URL="postgresql://user:password@localhost:5432/easy2work?schema=public"

# For Docker PostgreSQL:
# DATABASE_URL="postgresql://easy2work:easy2work@localhost:5432/easy2work"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-change-this-in-production"

# Google OAuth (for authentication)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Google Drive API (for file storage)
GOOGLE_DRIVE_CLIENT_ID=""
GOOGLE_DRIVE_CLIENT_SECRET=""
GOOGLE_DRIVE_REDIRECT_URI="http://localhost:3000/api/integrations/google-drive/callback"

# Email/SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@easy2work.com"

# Application Settings
APP_NAME="Easy2Work"
APP_URL="http://localhost:3000"
SAAS_PROVIDER_EMAIL="admin@easy2work.com"

# Encryption Key (for sensitive data)
ENCRYPTION_KEY="your-32-character-encryption-key"

# File Upload
MAX_FILE_SIZE="10485760"
UPLOAD_DIR="./uploads"
